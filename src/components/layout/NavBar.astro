---
import { Image } from "astro:assets";
import ThemeSwitcher from "../../components/ThemeSwitcher.tsx";
import poo from "../../images/poo.svg";
import Tooltip from "../Tooltip.astro";

interface Props {
    title: string;
    tooltip: string;
}

const { title, tooltip } = Astro.props;
---

<div
    class="navbar bg-base-100 p-4 fixed top-0 left-0 right-0 max-w-screen-2xl mx-auto z-50 shadow-md rounded-b-lg pl-80"
>
    <div class="navbar-start">
        <a href={`${import.meta.env.BASE_URL}/`} class="btn btn-ghost text-xl"
            >No
            <Image src={poo} alt="poo" class="w-6 h-6" />
            danish</a
        >
    </div>
    <div class="navbar-center hidden lg:flex">
        <Tooltip bottom tooltip={tooltip}>
            <h1 class="text-3xl">
                {title}
            </h1>
        </Tooltip>
    </div>
    <div class="navbar-end">
        <ThemeSwitcher client:only="react" />
    </div>
</div>
