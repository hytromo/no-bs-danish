---
import Sentences from "../../components/Sentence/Sentences";
import Tooltip from "../../components/Tooltip.astro";
import Layout from "../../layouts/Layout.astro";
import {
    tVsnWordsExamples,
    genericExamples,
    pluralWordsExamples,
    subjectExamples,
} from "../../utils/examples/possesive-pronominer";
import { COLORS } from "../../utils/fixedColors";
---

<Layout
    title={{
        text: "Reflexive Pronouns",
        tooltip: "Refleksive Pronominer",
    }}
>
    <div>
        <article class="prose max-w-none text-center mb-10">
            <h3>Myself, yourself etc</h3>
            <div class="flex justify-center mb-8">
                <table class="prose-table max-w-lg text-lg">
                    <thead>
                        <tr>
                            <th>Danish</th>
                            <th>Translation</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                Jeg ser <span class={COLORS.Important.class}
                                    >mig</span
                                > i spejlet
                            </td>
                            <td
                                >I see <span class={COLORS.Secondary.class}
                                    >myself</span
                                > in the mirror</td
                            >
                        </tr>

                        <tr>
                            <td>
                                Du ser <span class={COLORS.Important.class}
                                    >dig</span
                                > i spejlet
                            </td>
                            <td
                                >You see <span class={COLORS.Secondary.class}
                                    >yourself</span
                                > in the mirror</td
                            >
                        </tr>

                        <tr>
                            <td>
                                Han ser <span class={COLORS.Important.class}
                                    >sig</span
                                > i spejlet
                            </td>
                            <td
                                >He sees <span class={COLORS.Secondary.class}
                                    >himself</span
                                > in the mirror</td
                            >
                        </tr>

                        <tr>
                            <td>
                                Hun ser <span class={COLORS.Important.class}
                                    >sig</span
                                > i spejlet
                            </td>
                            <td
                                >She sees <span class={COLORS.Secondary.class}
                                    >herself</span
                                > in the mirror</td
                            >
                        </tr>

                        <tr>
                            <td>
                                Den/Det ser <span class={COLORS.Important.class}
                                    >sig</span
                                > i spejlet
                            </td>
                            <td
                                >It sees <span class={COLORS.Secondary.class}
                                    >itself</span
                                > in the mirror</td
                            >
                        </tr>

                        <tr>
                            <td>
                                Vi ser <span class={COLORS.Important.class}
                                    >os</span
                                > i spejlet
                            </td>
                            <td
                                >We see <span class={COLORS.Secondary.class}
                                    >ourselves</span
                                > in the mirror</td
                            >
                        </tr>

                        <tr>
                            <td>
                                I ser <span class={COLORS.Important.class}
                                    >jer</span
                                > i spejlet
                            </td>
                            <td
                                >You see <span class={COLORS.Secondary.class}
                                    >yourselves</span
                                > in the mirror</td
                            >
                        </tr>

                        <tr>
                            <td>
                                De ser <span class={COLORS.Important.class}
                                    >sig</span
                                > i spejlet
                            </td>
                            <td
                                >They see <span class={COLORS.Secondary.class}
                                    >themselves</span
                                > in the mirror</td
                            >
                        </tr>
                    </tbody>
                </table>
            </div>
        </article>
    </div>
</Layout>
