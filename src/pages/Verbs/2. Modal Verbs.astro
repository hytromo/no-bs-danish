---
import Sentences from "../../components/Sentence/Sentences";
import Tooltip from "../../components/Tooltip.astro";
import Layout from "../../layouts/Layout.astro";
import {
    burdeExamples,
    kunneExamples,
    skulleExamples,
    villeExamples,
    turdeExamples,
    matteExamples,
} from "../../utils/examples/modalverber";
import { genericExamples } from "../../utils/examples/personlige-pronominer";
import { COLORS } from "../../utils/fixedColors";
---

<Layout
    title={{
        text: "Modal Verbs",
        tooltip: "Modalverber",
    }}
>
    <div>
        <article class="prose max-w-none text-center mb-10">
            <p class="italic">ville, skulle, kunne, burde, måtte, turde</p>
            <p class="m-auto max-w-lg">
                They are like <span class="italic">can, must, shall</span> etc, and
                they are followed by the verb in infinitive tense, <span
                    class="font-bold">without</span
                > using "at". They don't have an imperative form.
            </p>

            <div class="divider mb-10"></div>
            <h3>Ville</h3>
            <p>Use for wishes or intentions</p>
            <div class="flex justify-center mb-7">
                <table class="prose-table max-w-3xl text-lg">
                    <thead>
                        <tr>
                            <th>Infinitiv</th>
                            <th>Nutid</th>
                            <th>Datid</th>
                            <th>Førnutid</th>
                            <th>Førdatid</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td
                                ><Tooltip tooltip="to want">at ville</Tooltip
                                ></td
                            >
                            <td><Tooltip tooltip="want">vil</Tooltip></td>
                            <td><Tooltip tooltip="wanted">ville</Tooltip></td>
                            <td
                                ><Tooltip tooltip="have wanted"
                                    >har villet</Tooltip
                                ></td
                            >
                            <td
                                ><Tooltip tooltip="had wanted"
                                    >havde villet</Tooltip
                                ></td
                            >
                        </tr>
                    </tbody>
                </table>
            </div>

            <Sentences client:only="react" sentences={villeExamples} />

            <div class="divider mb-10"></div>
            <h3>Skulle</h3>
            <p>Use for plans, strong suggestions or obligations</p>
            <div class="flex justify-center mb-7">
                <table class="prose-table max-w-3xl text-lg">
                    <thead>
                        <tr>
                            <th>Infinitiv</th>
                            <th>Nutid</th>
                            <th>Datid</th>
                            <th>Førnutid</th>
                            <th>Førdatid</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td
                                ><Tooltip tooltip="to have to"
                                    >at skulle</Tooltip
                                ></td
                            >
                            <td><Tooltip tooltip="must">skal</Tooltip></td>
                            <td><Tooltip tooltip="should">skulle</Tooltip></td>
                            <td
                                ><Tooltip tooltip="have had to"
                                    >har skullet</Tooltip
                                ></td
                            >
                            <td
                                ><Tooltip tooltip="had had to"
                                    >havde skullet</Tooltip
                                ></td
                            >
                        </tr>
                    </tbody>
                </table>
            </div>

            <Sentences client:only="react" sentences={skulleExamples} />

            <div class="divider mb-10"></div>
            <h3>Kunne</h3>
            <p>Use to express ability, possibility or permission</p>
            <div class="flex justify-center mb-7">
                <table class="prose-table max-w-3xl text-lg">
                    <thead>
                        <tr>
                            <th>Infinitiv</th>
                            <th>Nutid</th>
                            <th>Datid</th>
                            <th>Førnutid</th>
                            <th>Førdatid</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><Tooltip tooltip="to can">at kunne</Tooltip></td
                            >
                            <td><Tooltip tooltip="can">kan</Tooltip></td>
                            <td><Tooltip tooltip="could">kunne</Tooltip></td>
                            <td
                                ><Tooltip tooltip="have been able to"
                                    >har kunnet</Tooltip
                                ></td
                            >
                            <td
                                ><Tooltip tooltip="had been able to "
                                    >havde kunnet</Tooltip
                                ></td
                            >
                        </tr>
                    </tbody>
                </table>
            </div>

            <Sentences client:only="react" sentences={kunneExamples} />

            <div class="divider mb-10"></div>
            <h3>Burde</h3>
            <p>
                Use to express advice, recommendations or expectations, often
                with a ethical tone
            </p>
            <div class="flex justify-center mb-7">
                <table class="prose-table max-w-3xl text-lg">
                    <thead>
                        <tr>
                            <th>Infinitiv</th>
                            <th>Nutid</th>
                            <th>Datid</th>
                            <th>Førnutid</th>
                            <th>Førdatid</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td
                                ><Tooltip tooltip="to should">at burde</Tooltip
                                ></td
                            >
                            <td><Tooltip tooltip="should">bør</Tooltip></td>
                            <td><Tooltip tooltip="should">burde</Tooltip></td>
                            <td
                                ><Tooltip tooltip="should have"
                                    >har burdet</Tooltip
                                ></td
                            >
                            <td
                                ><Tooltip tooltip="should had"
                                    >havde burdet</Tooltip
                                ></td
                            >
                        </tr>
                    </tbody>
                </table>
            </div>

            <Sentences client:only="react" sentences={burdeExamples} />

            <div class="divider mb-10"></div>
            <h3>Måtte</h3>
            <p>
                Use to express permission, possibility, or necessity, it is
                similar to "may" or "might" in English, depending on the context
            </p>
            <div class="flex justify-center mb-7">
                <table class="prose-table max-w-3xl text-lg">
                    <thead>
                        <tr>
                            <th>Infinitiv</th>
                            <th>Nutid</th>
                            <th>Datid</th>
                            <th>Førnutid</th>
                            <th>Førdatid</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td
                                ><Tooltip tooltip="to have to">at måtte</Tooltip
                                ></td
                            >
                            <td><Tooltip tooltip="may">må</Tooltip></td>
                            <td><Tooltip tooltip="must">måtte</Tooltip></td>
                            <td
                                ><Tooltip tooltip="have had to"
                                    >har måttet</Tooltip
                                ></td
                            >
                            <td
                                ><Tooltip tooltip="had had to"
                                    >havde måttet</Tooltip
                                ></td
                            >
                        </tr>
                    </tbody>
                </table>
            </div>

            <Sentences client:only="react" sentences={matteExamples} />

            <div class="divider mb-10"></div>
            <h3>Turde</h3>
            <p>
                Use to express courage or the lack of courage to do something,
                similar to "dare" in English
            </p>
            <div class="flex justify-center mb-7">
                <table class="prose-table max-w-3xl text-lg">
                    <thead>
                        <tr>
                            <th>Infinitiv</th>
                            <th>Nutid</th>
                            <th>Datid</th>
                            <th>Førnutid</th>
                            <th>Førdatid</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td
                                ><Tooltip tooltip="to dare">at turde</Tooltip
                                ></td
                            >
                            <td><Tooltip tooltip="dare">tør</Tooltip></td>
                            <td><Tooltip tooltip="dared">turde</Tooltip></td>
                            <td
                                ><Tooltip tooltip="have dared"
                                    >har turdet</Tooltip
                                ></td
                            >
                            <td
                                ><Tooltip tooltip="had dared"
                                    >havde turdet</Tooltip
                                ></td
                            >
                        </tr>
                    </tbody>
                </table>
            </div>

            <Sentences client:only="react" sentences={turdeExamples} />
        </article>
    </div>
</Layout>
