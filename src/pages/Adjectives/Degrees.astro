---
import Sentences from "../../components/Sentence/Sentences";
import Tooltip from "../../components/Tooltip.astro";
import Layout from "../../layouts/Layout.astro";
import {
    nWordExamples,
    tWordExamples,
    pluralWordExamples,
    degreesExamples,
} from "../../utils/examples/adjektiver";
import { COLORS } from "../../utils/fixedColors";
---

<Layout
    title={{
        text: "Degrees of adjectives",
        tooltip: "Grader af adjektiver",
    }}
>
    <div>
        <article class="prose max-w-none text-center mb-10">
            <h3>The three degrees</h3>
            <p class="max-w-2xl mx-auto text-left">
                Most adjectives get the -ere and -est suffixes, unless they are
                irregular. The comperative and superlative forms don't change
                based on plural or n/t-words.
            </p>
            <div class="flex justify-center mb-7">
                <table class="prose-table max-w-lg text-lg">
                    <thead>
                        <tr>
                            <th>Basic</th>
                            <th>Comperative</th>
                            <th>Superlative</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                <Tooltip tooltip="high"> høj </Tooltip>
                            </td>
                            <td class={COLORS.Important.class}>
                                <Tooltip tooltip="higer"> højere </Tooltip>
                            </td>
                            <td class={COLORS.Secondary.class}>
                                <Tooltip tooltip="highest"> højest </Tooltip>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <Tooltip tooltip="expensive"> dyr </Tooltip>
                            </td>
                            <td class={COLORS.Important.class}>
                                <Tooltip tooltip="more expensive">
                                    dyrere
                                </Tooltip>
                            </td>
                            <td class={COLORS.Secondary.class}>
                                <Tooltip tooltip="most expensive">
                                    dyrest</Tooltip
                                >
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <Tooltip tooltip="big"> stor </Tooltip>
                            </td>
                            <td class={COLORS.Important.class}>
                                <Tooltip tooltip="bigger"> større </Tooltip>
                            </td>
                            <td class={COLORS.Secondary.class}>
                                <Tooltip tooltip="biggest"> størst </Tooltip>
                            </td>
                        </tr>
                        <!-- let's do the same with "few": -->
                        <tr>
                            <td>
                                <Tooltip tooltip="few"> få </Tooltip>
                            </td>
                            <td class={COLORS.Important.class}>
                                <Tooltip tooltip="fewer"> færre </Tooltip>
                            </td>
                            <td class={COLORS.Secondary.class}>
                                <Tooltip tooltip="fewest"> færrest </Tooltip>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="divider mb-10"></div>
            <Sentences client:only="react" sentences={degreesExamples} />
        </article>
    </div>
</Layout>
